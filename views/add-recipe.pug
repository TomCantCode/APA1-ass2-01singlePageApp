doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Add a new Recipe
    link(rel="stylesheet", href="/styles.css")

body
  header
    h1 Add a New Recipe
    a.navlink(href="/") View Recipes

  form.addRecipe(action="/add-recipe" method="post")
    div
      label(for="name") Name:
      input(type="text" name="name" id="name" required)

    div
      label(for="ingredients") Ingredients:
      textarea(name="ingredients" id="ingredients" required)

    div
      label(for="instructions") Instructions:
      textarea(name="instructions" id="instructions" required)

    div
      button(type="submit") Add Recipe